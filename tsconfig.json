{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist", // Certifique-se de que está apontando para a pasta dist
    "baseUrl": "./",
    "rootDir": "./src", // Certifique-se de que está apontando para a pasta src
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "noEmitOnError": true // Impede a geração da pasta dist se houver erros
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"] // Exclui a pasta dist da compilação
}