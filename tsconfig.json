{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,  // 🔹 Adicione isso para evitar erros de importação
    "moduleResolution": "node",  // 🔹 Garante que os módulos sejam resolvidos corretamente
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",  // 🔹 Define a raiz do código TypeScript
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src"],  // 🔹 Garante que só os arquivos dentro de "src" sejam compilados
  "exclude": ["node_modules", "dist"]  // 🔹 Evita problemas com módulos externos
}