{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,  //  Adicione isso para evitar erros de importa莽茫o
    "moduleResolution": "node",  //  Garante que os m贸dulos sejam resolvidos corretamente
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",  //  Define a raiz do c贸digo TypeScript
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src"],  //  Garante que s贸 os arquivos dentro de "src" sejam compilados
  "exclude": ["node_modules", "dist"]  //  Evita problemas com m贸dulos externos
}